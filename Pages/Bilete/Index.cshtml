@page
@model Ungureanu_Gabriel_Sebastian_CIG7.Pages.Bilete.IndexModel

@{
    ViewData["Title"] = "Bilete";
}

<h1>Bilete Valabile</h1>

<p>
    <a asp-page="Create">Creeaza</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bilet[0].Oras.OrasGara)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bilet[0].Destinatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bilet[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bilet[0].OraPlecarii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bilet[0].Companie.CompanieN)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bilet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Oras.OrasGara)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destinatie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OraPlecarii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Companie.CompanieN)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
